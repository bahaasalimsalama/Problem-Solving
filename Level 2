    }
}

bool ReadNumber(string failed, out int number)
{
    Console.WriteLine(failed);
    bool bIsValidated = true;
    bIsValidated = int.TryParse(Console.ReadLine(), out number);
    if (!bIsValidated)
    {
        PrintValidat("Please enter valid number");
        return true;
    }
    return false;
}

