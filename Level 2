#region ConcatenationArrays

void ConcatenationOfArrays()
{
    PrintMessage("Welcome to Concatenation of 2 Arrays App");
    int nSizeArrays = 0;
    if (ReadNumber("Please enter Size of Array number ( 1 )", out nSizeArrays))
        return;
    int[] nNumbers1 = new int[nSizeArrays];
    ReadNumbersOfArrays(nSizeArrays, nNumbers1);
    Console.WriteLine("============================");
    if (ReadNumber("Please enter Size of Array number ( 2 )", out nSizeArrays))
        return;
    int[] nNumbers2 = new int[nSizeArrays];
    ReadNumbersOfArrays(nSizeArrays, nNumbers2);
    int[] nConcatenation = new int[nNumbers1.Length + nNumbers2.Length];
    LoobConcatenation2Arryas(nNumbers1, nNumbers2, nConcatenation);
    PrintArryasOfNumbers(nConcatenation);
    Console.WriteLine("============================");
    PrintMessage("Do you want to Divide the Arrays: Yes enter (y) no enter ( n )");
    char cUserChoice = ' ';
    while (((!ReadCharacter(out cUserChoice)) && cUserChoice == 'y'))
    {
        if (cUserChoice == 'y')
        {
            PrintMessage("do you want divide Array Number ( 1 ) or Array number ( 2 )");
            ReadCharacter(out cUserChoice);
            if (cUserChoice == '1')
                Copy2ArraysStartAndHalfAndEnd(nNumbers1);
            else
                Copy2ArraysStartAndHalfAndEnd(nNumbers2);
        }
        PrintMessage("Do you want to Divide the Arrays: Yes enter (y) no enter ( n )");
        if (ReadCharacter(out cUserChoice))
            return;
    }
    PrintMessage("--->( Good by )<---");
}
int[] SwitchUserChoiceOfarrays(int[] nNumbers1, char cUserChoice)
{
    int[] nResultArray = new int[] { };
    int nUserChoice = 0;
    switch (cUserChoice)
    {
        case '1':
            PrintMessage($"open numbers of array{nNumbers1.Length}");
            if (!ReadNumber("please enter Copy strat Arrays", out nUserChoice))
                nResultArray = CopyStartOfArrays(nNumbers1, nUserChoice);
            break;
        case '2':
            PrintMessage($"open numbers of array{(nNumbers1.Length + (nNumbers1.Length / 2))}");
            if (!ReadNumber("please enter Copy Half Arrays", out nUserChoice))
                nResultArray = CopyOtherHalfArrays(nNumbers1, nUserChoice);
            break;
        case '3':
            if (!ReadNumber("please enter Copy end Arrays", out nUserChoice))
                nResultArray = CopyEndHalfofArrays(nNumbers1, nUserChoice);
            break;
    }
    return nResultArray;
}
void ConcatenationOfArrays2()
{
    PrintMessage("Welcome to Concatenation of 2 Arrays App");
    int nSizeArrays = 0;
    if (ReadNumber("Please enter Size of Array number ( 1 )", out nSizeArrays))
        return;
    int[] nNumbers1 = new int[nSizeArrays];
    ReadNumbersOfArrays(nSizeArrays, nNumbers1);
    Console.WriteLine("============================");
    if (ReadNumber("Please enter Size of Array number ( 2 )", out nSizeArrays))
        return;
    int[] nNumbers2 = new int[nSizeArrays];
    ReadNumbersOfArrays(nSizeArrays, nNumbers2);
    int[] nConcatenation = new int[nNumbers1.Length + nNumbers2.Length];
    LoobConcatenation2Arryas(nNumbers1, nNumbers2, nConcatenation);
    PrintArryasOfNumbers(nConcatenation);
    Console.WriteLine("============================");
    PrintMessage("Do you want to Divide the Arrays: Yes enter (y) no enter ( n )");
    char cUserChoice = ' ';
    int nUserChoice = 0;
    int[] nResultArray = new int[] { };
    while (((!ReadCharacter(out cUserChoice)) && cUserChoice == 'y'))
    {
        if (cUserChoice == 'y')
        {
            PrintMessage("do you want divide Array Number ( 1 ) or Array number ( 2 )");
            ReadCharacter(out cUserChoice);
            if (cUserChoice == '1')
            {
                PrintMessage("Please enter divide Array Number start enetr (1) half enetr (2) end enetr (3)");
                ReadCharacter(out cUserChoice);
                nResultArray = SwitchUserChoiceOfarrays(nNumbers1, cUserChoice);
                PrintArryasOfNumbers(nResultArray);

            }
            else
            {
                PrintMessage("do you want divide Array Number ( 1 ) or Array number ( 2 )");
                ReadCharacter(out cUserChoice);
                if (cUserChoice == '1')
                    PrintMessage("Please enter divide Array Number start enetr (1) half enetr (2) end enetr (3)");
                ReadCharacter(out cUserChoice);
                nResultArray = SwitchUserChoiceOfarrays(nNumbers1, cUserChoice);
                PrintArryasOfNumbers(nResultArray);
            }
        }
        PrintMessage("Do you want to Divide the Arrays: Yes enter (y) no enter ( n )");
    }
    PrintMessage("--->( Good by )<---");
}

void Concatenation()
{
    PrintMessage("Welcome to concatention 2 arrays app");
    int nSizeArrays = 0;
    if (ReadNumber("Please enter size of array number ( 1 )", out nSizeArrays))
        return;
    int[] Numbers1 = new int[nSizeArrays];
    ReadNumbersOfArrays(nSizeArrays, Numbers1);
    if (ReadNumber("Please enter size of array number ( 2 )", out nSizeArrays))
        return;
    int[] Numbers2 = new int[nSizeArrays];
    var vConcatenation = new int[Numbers1.Length + Numbers2.Length];
    ReadNumbersOfArrays(nSizeArrays, Numbers2);
    LoobConcatenation2Arryas(Numbers1, Numbers2, vConcatenation);
    PrintArryasOfNumbers(vConcatenation);
    PrintMessage($"open number of array {vConcatenation.Length}");
    int nUserChoice = 0;
    // Read Size for whil loop and Is check input size form user not '!>' array  
    int[] nCopyArray = new int[] { };
    IsCheckSizeArray("please enter number plus start copy of array", out nUserChoice, vConcatenation.Length);
    nCopyArray = CopyStartOfArrays(vConcatenation, nUserChoice);
    // loop array for size and Print 
    PrintArryasOfNumbers(nCopyArray);

    Console.WriteLine("-----------------------------");
    int nComplet = vConcatenation.Length;
    if (nComplet % 2 != 0)
    {
        nComplet -= vConcatenation.Length / 2;
    }
    nCopyArray = new int[nComplet];
    PrintMessage($"open number of array {nComplet}");
    // Read Size for whil loop and Is check input size form user not '!>' array  
    IsCheckSizeArray("please enter number plus Other Half copy of array", out nUserChoice, vConcatenation.Length);
    nCopyArray = CopyOtherHalfArrays(vConcatenation, nUserChoice);
    PrintArryasOfNumbers(nCopyArray);
    Console.WriteLine("-----------------------------");

    PrintMessage($"open number of array {nComplet}");
    // Read Size for whil loop and Is check input size form user not '!>' array  
    IsCheckSizeArray("please enter number plus revesr half copy of array", out nUserChoice, vConcatenation.Length);
    nCopyArray = new int[nComplet];
    nCopyArray = CopyReversHalfArrays(vConcatenation, nUserChoice);
    PrintArryasOfNumbers(nCopyArray);
    Console.WriteLine("-----------------------------");

    nCopyArray = new int[vConcatenation.Length];
    PrintMessage($"open number of array {vConcatenation.Length}");
    if (ReadNumber("please enter number plus End copy of array", out nUserChoice))
        return;
    nCopyArray = CopyEndHalfofArrays(vConcatenation, nUserChoice);
    PrintArryasOfNumbers(nCopyArray);
}

