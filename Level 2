            break;
        case 10:
            OtherHalfOfArray();
            break;
        case 11:
            EndHalfOfArray();
            break;
        case 12:
            CopyStartAndHalfAndEnd();
            break;
        case 13:
            ConcatenationOfArrays();
            break;
        case 14:
            Concatenation();
            break;
        case 15:
            ConcatenationOfArrays2();
            break;
        case 16:
            MargOfArrays2();
            break;
        case 17:
            differences1();
            break;
        case 18:
            Unique();
            break;

    }
}

