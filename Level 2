#region Marg&SwitchMarg

void MargOfArrays2()
{
    PrintMessage("Welcome to Marg of 2 Arrays App");
    int nSizeArrays = 0;
    if (ReadNumber("Please enter Size of Array number ( 1 )", out nSizeArrays))
        return;
    int[] nNumbers1 = new int[nSizeArrays];
    if (ReadNumbersOfArrays(nSizeArrays, nNumbers1))
        return;
    Console.WriteLine("============================");


    if (ReadNumber("Please enter Size of Array number ( 2 )", out nSizeArrays))
        return;
    int[] nNumbers2 = new int[nSizeArrays];
    if (ReadNumbersOfArrays(nSizeArrays, nNumbers2))
        return;
    int[] nConcatenation = new int[] { };
    PrintMessage("""
    marg array (1 & 2) from start enter ( 1 )
    marg array(1 & 2) from end enter (2)
    marg array(1 & 2) from half enter (3)
    marg array(1 || 2) from choice enter (4)
    """);
    char cUserChoice = ' ';
    if (ReadCharacter(out cUserChoice))
        return;
    SwitchMarg(nConcatenation, nNumbers1, nNumbers2, cUserChoice);
    PrintArryasOfNumbers(nConcatenation);
    Console.WriteLine("============================");
}
void SwitchMarg(int[] nConcatenation, int[] nNumbers1, int[] nNumbers2, char cUserChoice)
{
    switch (cUserChoice)
    {
        case '1':
            nConcatenation = new int[nNumbers1.Length + nNumbers2.Length];
            LoobConcatenation2Arryas(nNumbers1, nNumbers2, nConcatenation);
            PrintArryasOfNumbers(nConcatenation);
            break;
        case '2':
            nConcatenation = new int[nNumbers1.Length + nNumbers2.Length];
            LoobFromEndConcatenation2Arryas(nNumbers1, nNumbers2, nConcatenation);
            PrintArryasOfNumbers(nConcatenation);
            break;
        case '3':
            nConcatenation = new int[(((nNumbers1.Length + nNumbers2.Length) / 2) + 1)];
            LoobFromHalfArray1(nNumbers1, nConcatenation);
            LoobFromHalfArray2(nNumbers1, nNumbers2, nConcatenation);
            PrintArryasOfNumbers(nConcatenation);
            break;
        case '4':
            SwitchMarg1(nConcatenation, nNumbers1, nNumbers2, cUserChoice);
            break;
    }
}


void SwitchMarg1(int[] nConcatenation, int[] nNumbers1, int[] nNumbers2, char cUserChoice)
{
    char nameArray = '1';
    PrintMessage("Please enter From marg Start Array From End");
    PrintMessage($"""
        marg array number ({nameArray}) from start enter ( 1 )
        marg array number ({nameArray}) from end enter (2)
        marg array number ({nameArray}) from half enter (3)
        marg array number ({nameArray}) from choice enter (4)
        """);

    if (ReadCharacter(out cUserChoice))
        return;
    switch (cUserChoice)
    {
        case '1':
            nConcatenation = new int[nNumbers1.Length + nNumbers2.Length];
            nConcatenation = CopyStartOfArrays(nNumbers1, nNumbers1.Length);
            PrintArryasOfNumbers(nConcatenation);
            break;

        case '2':
            nConcatenation = new int[(((nNumbers1.Length + nNumbers2.Length) / 2) + 1)];
            nConcatenation = CopyOtherHalfArrays(nNumbers1, nNumbers1.Length);
            PrintArryasOfNumbers(nConcatenation);
            break;
        case '3':
            nConcatenation = new int[nNumbers1.Length + nNumbers2.Length];
            nConcatenation = CopyEndHalfofArrays(nNumbers1, nNumbers1.Length);
            PrintArryasOfNumbers(nConcatenation);
            break;

        case '4':
            int nStart = 0;
            int nChoice = 0;
            PrintMessage($"open numbers of array ( {nNumbers1.Length} )");

            if (ReadNumber("Please enter start array", out nStart))
                return;
            PrintMessage($"open numbers of array ( {(nNumbers1.Length - nStart) + 1} )");

            if (ReadNumber("Please enter end array", out nChoice))
                return;
            nConcatenation = new int[(nChoice)];

            MargFromStartArrayNumber1(nConcatenation, nStart, nNumbers1, nChoice);
            SwitchMarg2(nConcatenation, nChoice, nNumbers2, cUserChoice);
            break;
    }

}
void SwitchMarg2(int[] nConcatenation, int sizeFirstArry, int[] nNumbers2, char cUserChoice)
{
    char nameArray = '2';
    PrintMessage("Please enter From marg Start Array From End");
    PrintMessage($"""
        marg array number ({nameArray}) from start enter ( 1 )
        marg array number ({nameArray}) from end enter (2)
        marg array number ({nameArray}) from half enter (3)
        marg array number ({nameArray}) from choice enter (4)
        """);
    if (ReadCharacter(out cUserChoice))
        return;
    switch (cUserChoice)
    {
        case '1':
            nConcatenation = CopyStartOfArrays(nNumbers2, nNumbers2.Length);
            PrintArryasOfNumbers(nConcatenation);
            break;

        case '2':
            nConcatenation = CopyOtherHalfArrays(nNumbers2, nNumbers2.Length);
            PrintArryasOfNumbers(nConcatenation);
            break;
        case '3':
            nConcatenation = CopyEndHalfofArrays(nNumbers2, nNumbers2.Length);
            PrintArryasOfNumbers(nConcatenation);
            break;
        case '4':
            int start = 0;
            int nChoice = 0;

            PrintMessage($"open numbers of array ( {nNumbers2.Length} )");

            if (ReadNumber("Please enter start array", out start))
                return;
            PrintMessage($"open numbers of array ( {(nNumbers2.Length - start) + 1} )");
            if (ReadNumber("Please enter end array", out nChoice))
                return;
            Array.Resize(ref nConcatenation, (sizeFirstArry + nChoice));

            MargFromStartArrayNumber2(nConcatenation, start, sizeFirstArry, nNumbers2, nChoice);
            PrintArryasOfNumbers(nConcatenation);
            break;
    }
}

