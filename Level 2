#region CheckIsDoublcitedSecondArray

void differences1()
{
    PrintMessage("Welcome to differences of 2 Arrays App");
    int nSizeArrays1 = 0;
    if (ReadNumber("Please enter Size of Array number ( 1 )", out nSizeArrays1))
        return;
    // Input arrays
    int[] sat1 = new int[nSizeArrays1];
    ReadNumbersOfArrays(nSizeArrays1, sat1);
    Console.WriteLine("============================");
    if (ReadNumber("Please enter Size of Array number ( 2 )", out nSizeArrays1))
        return;
    int[] sat2 = new int[nSizeArrays1];
    ReadNumbersOfArrays(nSizeArrays1, sat2);
    // Array to store elements without duplicates
    int[] differences = new int[sat1.Length];
    // Get common valuse between two arrays
    differences = Differences(sat1, sat2, differences);
    // Print Result of Array
    foreach (int n in differences)
    {
        Console.WriteLine($"Array of : {n}");
    }
}

int[] Differences(int[] sat1, int[] sat2, int[] differences)
{
    int nCount = 0;
    foreach (int n in sat1)
    {
        // Skip duplicated values of differences array
        if (CheckIsDoublicated(n, differences, nCount))
            continue;
        // Check if valus from first array is in second array
        if (DifferencesIsCheck(n, sat2))
        {
            nCount++;
            Array.Resize(ref differences, nCount);
            differences[nCount - 1] = n;
        }

    }
    return differences;
}


bool DifferencesIsCheck(int n, int[] sat2)
{
    foreach (int j in sat2)
    {
        if (n == j)
        {
            return true;
        }
    }
    return false;
}

bool CheckIsDoublicated(int n, int[] differences, int count)
{
    for (int i = 0; i < count; i++)
    {
        if (n == differences[i])
            return true;
    }
    return false;
}
#endregion

#region Unique
void Unique()
{
    PrintMessage("Welcome to marg of 2 Arrays not doublcit App");
    int nSizeArrays1 = 0;
    if (ReadNumber("Please enter Size of Array number ( 1 )", out nSizeArrays1))
        return;
    // Input arrays
    int[] Array1 = new int[nSizeArrays1];
    if (ReadNumbersOfArrays(nSizeArrays1, Array1))
        return;
    Console.WriteLine("============================");
    if (ReadNumber("Please enter Size of Array number ( 2 )", out nSizeArrays1))
        return;
    int[] Array2 = new int[nSizeArrays1];
    if (ReadNumbersOfArrays(nSizeArrays1, Array2))
        return;
    // Array to store elements without duplicates
    int[] differences = new int[] { };
    int nCount = IsCheckUnique(ref differences, Array1);
    IsCheckUnique2(ref differences, Array2, nCount);
    PrintArryasOfNumbers(differences);
}

int IsCheckUnique(ref int[] differences, int[] inputOfArray)
{
    int nCount = 0;
    foreach (int n in inputOfArray)
    {
        if (CheckIsDoublicated(n, differences, nCount))
            continue;
        nCount++;
        Array.Resize(ref differences, nCount);
        differences[nCount - 1] = n;
    }
    return nCount;
}
void IsCheckUnique2(ref int[] differences, int[] inputOfArray2, int nCount)
{
    foreach (int n in inputOfArray2)
    {
        if (CheckIsDoublicated(n, differences, nCount))
            continue;
        nCount++;
        Array.Resize(ref differences, nCount);
        differences[nCount - 1] = n;
    }
}
